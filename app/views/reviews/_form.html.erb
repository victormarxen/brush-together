<%= simple_form_for [@toothbrush, @review] do |f| %>
  <%= f.input :rating, input_html: { min: '0', step: '1', max: "5" }, placeholder: "Rate your experience with this toothbrush (1-5) ?" %>
  <%= f.input :comment, placeholder: "Tell us about your experience." %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>
